<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />

        <Button
            android:id="@+id/btSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />
    </LinearLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
	    xmlns:sothree="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/searchSlidingLayout"
        android:layout_below="@+id/llSearchBar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="bottom"
	    sothree:panelHeight="68dp"
	    sothree:shadowHeight="4dp">

        <RelativeLayout
            android:id="@+id/rlSearchMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    	    <FrameLayout
    	        android:id="@+id/flMap"
    	        android:layout_width="match_parent"
    	        android:layout_height="match_parent"
    	        android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/btnArrowIndicatorLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="onArrowClick"
                android:text="&lt;&lt;" />
            <Button
                android:id="@+id/btnArrowIndicatorRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onArrowClick"
                android:text="&gt;&gt;" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSlider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#cccccc"
                android:gravity="center"
                android:text="Search results" />
    
            <android.support.v4.view.ViewPager
                android:id="@+id/vpSearchResults"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            </android.support.v4.view.ViewPager>

            </LinearLayout>

